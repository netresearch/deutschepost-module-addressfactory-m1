<config>
    <modules>
        <Postdirekt_Addressfactory>
            <version>1.0.0</version>
        </Postdirekt_Addressfactory>
    </modules>
    <global>
        <blocks>
            <postdirekt_addressfactory>
                <class>Postdirekt_Addressfactory_Block</class>
            </postdirekt_addressfactory>
        </blocks>
        <helpers>
            <postdirekt_addressfactory>
                <class>Postdirekt_Addressfactory_Helper</class>
            </postdirekt_addressfactory>
        </helpers>
        <models>
            <postdirekt_addressfactory>
                <class>Postdirekt_Addressfactory_Model</class>
                <resourceModel>postdirekt_addressfactory_resource</resourceModel>
            </postdirekt_addressfactory>
            <postdirekt_addressfactory_resource>
                <class>Postdirekt_Addressfactory_Model_Resource</class>
                <entities>
                    <analysis_result>
                        <table>postdirekt_addressfactory_analysis_result</table>
                    </analysis_result>
                    <analysis_status>
                        <table>postdirekt_addressfactory_analysis_status</table>
                    </analysis_status>
                </entities>
            </postdirekt_addressfactory_resource>
        </models>
        <resources>
            <postdirekt_addressfactory_setup>
                <setup>
                    <module>Postdirekt_Addressfactory</module>
                </setup>
            </postdirekt_addressfactory_setup>
        </resources>
        <sales_order_place_after>
            <observers>
                <postdirekt_addressfactory_init_deliverability_status>
                    <class>postdirekt_addressfactory/observer_deliverabilityStatus</class>
                    <method>initDeliverabilityStatus</method>
                    <type>singleton</type>
                </postdirekt_addressfactory_init_deliverability_status>
            </observers>
        </sales_order_place_after>

    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Postdirekt_Addressfactory before="Mage_Adminhtml">Postdirekt_Addressfactory_Adminhtml</Postdirekt_Addressfactory>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <postdirekt_addressfactory>
                    <file>postdirekt_addressfactory.xml</file>
                </postdirekt_addressfactory>
            </updates>
        </layout>
        <events>
            <sales_order_grid_collection_load_before>
                <observers>
                    <postdirekt_addressfactory_extendedgrid>
                        <class>postdirekt_addressfactory/observer_deliverabilityStatus</class>
                        <method>addStatusToOrderGridCollection</method>
                    </postdirekt_addressfactory_extendedgrid>
                </observers>
            </sales_order_grid_collection_load_before>
            <core_layout_block_create_after>
                <observers>
                    <postdirekt_addressfactory_ordergrid_column>
                        <class>postdirekt_addressfactory/observer_deliverabilityStatus</class>
                        <method>addColumnToGrid</method>
                        <type>singleton</type>
                    </postdirekt_addressfactory_ordergrid_column>
                </observers>
            </core_layout_block_create_after>
        </events>
    </adminhtml>
    <default>
        <customer>
            <postdirekt_addressfactory>
                <api_password backend_model="adminhtml/system_config_backend_encrypted"/>
                <configuration_name>Standard</configuration_name>
                <log_level>3</log_level>
            </postdirekt_addressfactory>
        </customer>
    </default>
</config>
